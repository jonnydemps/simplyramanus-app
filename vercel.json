name: simplyra
env:
  NODE_ENV: production

build:
  command: npm run build
  output: .next

routes:
  - src: /_next/static/(.*)
    headers:
      cache-control: public, max-age=31536000, immutable
    dest: /_next/static/$1
  - src: /_next/data/(.*)
    dest: /_next/data/$1
  - src: /_next/(.*)
    dest: /_next/$1
  - src: /api/(.*)
    dest: /api/$1
  - src: /(.*)
    dest: $1
